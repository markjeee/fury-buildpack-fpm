#!/usr/bin/env bash

export LANGUAGE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

if [ -n "$PACKAGE_OUTPUT" ]; then
    if [ "$PACKAGE_OUTPUT" eq "rpm" ]; then
        matcher="pkg/*.rpm"
        kind="rpm"
    elif [ "$PACKAGE_OUTPUT" eq "deb" ]; then
        matcher="pkg/*.deb"
        kind="deb"
    else
        exit 1
    fi
else
    matcher="pkg/*.deb"
    kind="deb"
fi

package=($1/$matcher)
if [ ! -f $package ]; then
    exit 1
fi

cat << EOF
---
package: $package
kind: $kind
EOF
