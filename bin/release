#!/usr/bin/env bash

export LANGUAGE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

if [ -z "$PACKAGE_OUTPUT" ]; then
    if [ "$PACKAGE_OUTPUT" eq "rpm" ]; then
        matcher=/pkg/*.rpm
        kind=rpm
    elif [ "$PACKAGE_OUTPUT" eq "deb" ]; then
        matcher=/pkg/*.deb
        kind=deb
    else
        exit 1
    fi
else
    matcher=/pkg/*.deb
    kind=deb
fi

if [ -f "$1$matcher" ]; then
    package=($1$matcher)
else
    exit 1
fi

cat << EOF
---
package: $package
kind: $kind
EOF
