#!/usr/bin/env ruby

$:.unshift File.expand_path('../../../lib', __FILE__)
require 'packguy'

ENV['FPM_EXEC_PATH'] = File.expand_path('../fpm', __FILE__)
unless ENV.include?('PACKGUY_PACKAGES')
  ENV['PACKGUY_PACKAGES'] = 'deb'
end

$:.unshift File.expand_path(ARGV[0])
Packguy.config[:path] = File.expand_path(ARGV[0])

Packguy.setup
Packguy.build_package
